<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context="com.fiona.musicplayer.fragment.PlayFragment">


    <ImageView
        android:id="@+id/imageView_play_fragment"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#996699" />

    <TextView
        android:id="@+id/textView_title_play"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#aaaaaa"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_play_fragment"
        android:layout_toEndOf="@+id/imageView_play_fragment"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView_artist_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar_play"
        android:layout_alignLeft="@+id/textView_title_play"
        android:layout_alignStart="@+id/textView_title_play"
        android:layout_marginBottom="6dp"
        android:text=""
        android:textColor="#888888"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/imageButton_next"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView_title_play"
        android:src="@drawable/ic_skip_next_white_36dp" />

    <ImageButton
        android:id="@+id/imageButton_play"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton_next"
        android:layout_toLeftOf="@+id/imageButton_next"
        android:layout_toStartOf="@+id/imageButton_next"
        android:src="@drawable/ic_play_arrow_white_36dp" />

    <ProgressBar
        android:id="@+id/progressBar_play"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/imageButton_next"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imageView_play_fragment"
        android:layout_toRightOf="@+id/imageView_play_fragment"
        android:indeterminate="false" />

</RelativeLayout>
